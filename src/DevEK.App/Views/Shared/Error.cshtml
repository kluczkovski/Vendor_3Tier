@model DevEK.App.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "An error has occurred!";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Something got wrong! Please try contact our support.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
