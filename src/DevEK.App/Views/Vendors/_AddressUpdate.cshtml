@model VendorViewModel

@{
    ViewData["Title"] = "Update Address";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">x</span>
        <span class="sr-only">Close</span>
       </button>
</div>

<form asp-action="UpdateAddress">
    <div class="modal-body">

        <input type="hidden" asp-for="Address.Id" />
        <input type="hidden" asp-for="Address.VendorId" />

        <partial name="_AddressEdit.cshtml" />

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Address" class="btn btn-success"/>
            <input type="button" value="Back" class="btn btn-info" btn-info data-dismiss="modal"/>
        </div>
    </div>
</form>

<script>
    BuscaCep();
</script>